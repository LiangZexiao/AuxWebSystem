@{
    String sessString = WebSystem.Helpers.UserSecurityHelper.sessionName;
    Object obj = Session[sessString];
    if( null == obj ){
        <ul>
            <li>@Html.ActionLink("登录", "LoginPage", "User", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }else{
        WebSystem.Models.UserTableModel user = (WebSystem.Models.UserTableModel)obj;
        <text>
            你好，@user.LogName (@user.UserID)
            <a href="/User/Logoff">注销</a>
        </text>  
    } 
}