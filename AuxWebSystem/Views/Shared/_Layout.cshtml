    <script type="text/javascript" src='~/Content/jquery/moment.js'></script>
    <script type="text/javascript" src='~/Content/jquery/daterangepicker.js'></script>
    <link rel="stylesheet" type="text/css" href="~/Content/css/daterangepicker-bs3.css">
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.css" type="text/css"/>
    <script type="text/javascript" src='~/Content/jquery/ajaxfrom.js'></script>
    
    
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: '微软雅黑';
        }

        #daohanglan li {
            float: left;
            position: relative;
            padding: 1.6% 4%;
            list-style: none;
            font-size: 20px;
        }

            #daohanglan li:hover {
                border-bottom: 5px solid blue;
            }

            #daohanglan li:first-child:hover {
                border: 0;
            }

            #daohanglan li:last-child:hover {
                border: 0;
            }

        #daohanglan div {
            padding: 5% 0 0;
        }

        #daohanglan {
            background-color: rgb(255, 255, 255);
            height: 78px;
            box-shadow: 1px 1px rgba(0,0,0,.3);
            background: url(/Images/logo_u5.jpg)no-repeat 22px;
        }

            #daohanglan .peizhi div a {
                text-decoration: none;
                color: rgba(255,255,255,0.9);
            }

                #daohanglan .peizhi div a:hover {
                    text-decoration: none;
                    color: black;
                }

            #daohanglan .peizhi div {
                width: 120px;
                background-color: rgba(0,0,0,.6);
                padding: 10% 3% 5%;
                margin-left: -8%;
                color: #2a6496;
            }

        .bg {
            background: url(/Images/bg.jpg)no-repeat;
            background-size: 100%;
            height: 570px;
        }

        .fenye a {
            color: black;
            background: #36608a;
        }
        #add input {
            width: 95px;
        }
        #addshiyantai input {
            width: 90px;
    </style>



</head>
<body>
        
        <ul id='daohanglan'>
            <li style='padding-left:10%;'></li>
            <li class="yonghuguanli">
                <a name='yonghuguanli' href="/User/WebUserManager">Web用户管理</a>
            </li>
            <li class="canshupeizhi">
                <a href="#" class='canshu'>参数配置</a>
                <div style='position:absolute;display:none;z-index: 1;' class='peizhi'>
                    <div><a href="/Parameter/StandardParameter">标准实验</a></div>
                    <div><a href="/Parameter/Holiday">节假日设置</a></div>
                    <div><a href="/Parameter/SystemParameterSetting">系统参数设置</a></div>
                </div>
            </li>
            <li class="shujuchakan">
                <a href="/Dataview/">数据查看</a>
            </li>

            <li class="shiyantaixinxi">
                <a href="/Labinfo/">试验台信息</a>
            </li>
            <li style='float:right;border-left:1px solid rgba(0,0,0,.3);'>
                <section>
                    @Html.Partial("_LoginPartial")
                </section>

            </li>
        </ul>
    
        <section>
            @RenderBody()
        </section>
        <script>
            $(document).ready(function () {
                $('.signal').bind('DOMNodeInserted', function (e) {
                    if ($(e.target).text() == '标准实验') {
                        alert('text');
                    }
                })
            })
           
        </script>

</body>
</html>
